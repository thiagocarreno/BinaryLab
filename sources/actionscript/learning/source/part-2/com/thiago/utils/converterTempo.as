package com.thiago.utils{	public class converterTempo	{		private var _tempo:uint;				private var _segundos:Number;				private var _minutos:Number;				private var _horas:Number;				private var _tempoFomatado:String;						public function converterTempo( _t:uint = 0 ):void		{			_tempo = _t;		}				public function update():void		{			converter();						setTempo();		}				private function converter():void		{			_segundos = _tempo;						_minutos = _segundos / 60;						_horas = _minutos / 60;									_segundos %= 60;						_minutos %= 60;						_horas %= 60;									_segundos = Math.floor( _segundos );						_minutos = Math.floor( _minutos );						_horas = Math.floor( _horas );		}				private function setTempo():void		{			_tempoFomatado = _horas + ':' + _minutos  +':' + _segundos;		}				//GETTER				public function get tempo():String		{			return _tempoFomatado;		}				//SETTER				public function set tempo( _t:String ):void		{			_tempoFomatado = _t;		}				public function set segundos( _s:uint ):void		{			_tempo = _s;		}	}}