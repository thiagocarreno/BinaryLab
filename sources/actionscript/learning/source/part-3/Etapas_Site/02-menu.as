package classes{	import flash.display.Sprite;	import flash.display.MovieClip;		import com.esouza.load.LoadXML;		public class menu extends Sprite	{		private var mc:MovieClip;		private var lxml:LoadXML;				public function menu( _mc:MovieClip ):void		{			mc = _mc;						init();		}				private function init():void		{			lxml = new LoadXML( 'xml/menu.xml' );						lxml.addEventListener( Event.COMPLETE, loaded );		}				private function loaded( evt:Event ):void		{			var xml:XML = XML( lxml.data );						var n:uint = 0;						var item:itemMenu;						while( n < xml.item.length() )			{				item = new itemMenu();								item.texto.text = xml.item[n].@label.toUpperCase();								item.texto.selectable = true;								item.data = {								data: xml.item[n].@data							}								n++;			}		}	}}