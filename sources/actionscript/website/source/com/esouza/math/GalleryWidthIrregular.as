package com.esouza.math{	import flash.display.Sprite;		public class GalleryWidthIrregular extends Sprite	{		private var _W_TOTAL:Number = 0;				private var _W_ATUAL:Number = 0;				private var _H_IMG:Number = 0;				private var _LINHA:Number = 0;				private var _MARGINX:Number = 0;				private var _MARGINY:Number = 0;						public function GalleryWidthIrregular():void		{					}				public function add( _W_IMG:Number ):Object		{			if(_W_ATUAL + _W_IMG + _MARGINX > _W_TOTAL)			{				_LINHA++;							_W_ATUAL = _W_IMG + _MARGINX;			}			else			{				_W_ATUAL += _W_IMG + _MARGINX;			}						return { px: _W_ATUAL - _W_IMG, py: _LINHA * _H_IMG + ( _MARGINY * _LINHA) };		}				public function set marginX(X:Number):void		{			_MARGINX = X;		}				public function set marginY(Y:Number):void		{			_MARGINY = Y;		}				public function set imageHeight(H:Number):void		{			_H_IMG = H;		}				public function set widthTotal(W:Number):void		{			_W_TOTAL = W;		}	}}