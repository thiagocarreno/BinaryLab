package com.esouza.effects{	import flash.display.Sprite;		import flash.events.Event;		import flash.events.MouseEvent;		import caurina.transitions.Tweener;		import caurina.transitions.properties.ColorShortcuts;			public class Fade extends Sprite	{		public function Fade():void		{			ColorShortcuts.init()		}				public static function mouseInOut(_obj:*, _colortint:Number = NaN):void		{			_obj.addEventListener(MouseEvent.MOUSE_OVER, mOver);							_obj.addEventListener(MouseEvent.MOUSE_OUT, mOut);						_obj.buttonMode = true;						function mOver(evt:Event):void			{				if( isNaN( _colortint ) )	Tweener.addTween(evt.currentTarget, {alpha: .5, time: .6});				else						Tweener.addTween(evt.currentTarget, {alpha: .5, _color: _colortint, time: .6});							}						function mOut(evt:Event):void			{				if( isNaN( _colortint ) )	Tweener.addTween(evt.currentTarget, {alpha: 1, time: .6});				else						Tweener.addTween(evt.currentTarget, {alpha: 1, _color: null, time: .6});			}		}	}}